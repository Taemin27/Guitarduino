void ef_drive_disable() {
  overdriveMixer.gain(0, 1);
  overdriveMixer.gain(1, 0);
  overdriveGainAmp.gain(0);
  overdriveLevelAmp.gain(0);
  distortionGainAmp.gain(0);
  distortionLevelAmp.gain(0);
}


