    // Enable reverb and apply settings
    freeverb1.roomsize(float(ef_reverb_roomSize) / 10);
    freeverb1.damping(float(ef_reverb_damping) / 10);
    reverbAmp.gain(1);
    reverbMixer.gain(0, float(10 - ef_reverb_wetDry) / 10);
